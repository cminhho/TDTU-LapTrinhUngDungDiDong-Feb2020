<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:orientation="vertical"
  tools:context=".ActivityExercise2">

  <EditText
    android:id="@+id/et_result"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:lines="5"
    android:background="#ddd"
    android:hint="Number..."
    android:gravity="center|right"
    android:padding="10dp"
    android:textSize="18dp"
    />

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <Button
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:tag="0"
      android:onClick="calculate"
      android:text="0"/>
    <Button
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:tag="1"
      android:onClick="calculate"
      android:text="1"/>
    <Button
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:tag="2"
      android:onClick="calculate"
      android:text="2"/>
    <Button
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:onClick="calculate"
      android:tag="3"
      android:text="3"/>
    <Button
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:onClick="calculate"
      android:tag="4"
      android:text="4"/>
  </LinearLayout>

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <Button
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:onClick="calculate"
      android:tag="5"
      android:text="5"/>
    <Button
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:onClick="calculate"
      android:tag="6"
      android:text="6"/>
    <Button
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:onClick="calculate"
      android:tag="7"
      android:text="7"/>
    <Button
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:onClick="calculate"
      android:tag="8"
      android:text="8"/>
    <Button
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:onClick="calculate"
      android:tag="9"
      android:text="9"/>
  </LinearLayout>

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <Button
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:onClick="calculate"
      android:tag="."
      android:text="."/>
    <Button
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:onClick="calculate"
      android:tag="+"
      android:text="+"/>
    <Button
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:onClick="calculate"
      android:tag="-"
      android:text="-"/>
    <Button
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:onClick="calculate"
      android:tag="*"
      android:text="*"/>
    <Button
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:onClick="calculate"
      android:tag="/"
      android:text="/"/>
  </LinearLayout>

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <Button
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:onClick="calculate"
      android:tag="SQRT"
      android:text="SQRT"/>
    <Button
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:onClick="calculate"
      android:tag="√"
      android:text="√"/>
    <Button
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:onClick="calculate"
      android:tag="MOD"
      android:text="MOD"/>
    <Button
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:onClick="calculate"
      android:tag="DIV"
      android:text="DIV"/>
    <Button
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:onClick="calculate"
      android:tag="="
      android:text="="/>
  </LinearLayout>

</LinearLayout>