<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical"
  android:gravity="center">

  <TextView
    android:id="@+id/tv_website_message"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Nhập đường link trang web"/>

  <EditText
    android:id="@+id/et_website_url"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:hint="E.x: https://"
    android:text="https://elit.tdtu.edu.vn/"
    android:minWidth="250dp"/>

  <Button
    android:id="@+id/btn_open_browser"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Mở trình duyệt"/>

</LinearLayout>