<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical"
  android:gravity="center"
  tools:context=".exercise01.Exercise01MainActivity">

  <TextView
    android:id="@+id/tv_welcome_message"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Xin chào, {email}. Vui lòng nhập tên"/>

  <EditText
    android:id="@+id/et_user_fullname"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:hint="E.x: Nguyen Van A"
    android:minWidth="250dp"/>

  <Button
    android:id="@+id/btn_save_and_quick"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Lưu và thoát"/>

</LinearLayout>